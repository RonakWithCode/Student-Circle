<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:menu="@menu/post_menu"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView

            android:id="@+id/imageView1"
            android:src="@drawable/dp"
            android:scaleType="fitCenter"
            app:riv_corner_radius="30dip"
            app:riv_border_width="2dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true"
            android:layout_height="@dimen/_40sdp"
            android:layout_width="@dimen/_40sdp"/>
        <TextView
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_16sdp"
            android:text="Post Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>
    <TextView
        android:id="@+id/postContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16sdp"
        android:text="This is the content of the post." />
    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/dateTextView"
            android:layout_width="20dp"
            android:src="@drawable/heart"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:contentDescription="@string/like_icon_description" />

        <TextView
            android:id="@+id/likesCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:text="100" />

        <ImageView
            android:id="@+id/comments"
            android:layout_width="20dp"
            android:src="@drawable/comment"
            android:scaleType="fitCenter"
            android:layout_weight="2"
            android:layout_height="20dp"
            android:contentDescription="@string/comment_icon_description" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="20dp"
            android:src="@drawable/share"
            android:scaleType="fitCenter"
            android:layout_weight="2"
            android:layout_height="20dp"
            android:contentDescription="@string/share_icon_description" />

    </LinearLayout>

</LinearLayout>